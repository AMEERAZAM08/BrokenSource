{
    // Configure files and folders visibility
    "files.exclude": {

        // Synced with other projects or shown on monorepo
        "*/**/poetry.toml":    true,
        "*/**/.gitattributes": true,
        "*/**/.gitignore":     true,
        "*/**/.github":        true,

        // Always hidden
        "**/poetry.lock": true,
        "**/.stignore":   true,
        "**/__pycache__": true,
        "**/License.md":  true, // You'll know the license before cloning..
    },

    // Python isort
    "editor.codeActionsOnSave": {
        "source.organizeImports": "explicit"
    },

    "isort.args": [
        "-sl"
    ],

    // Icons

    "material-icon-theme.files.associations": {
        "brakeit": "python"
    },

    "material-icon-theme.folders.associations": {
        // Broken Stuff
        "Broken": "src",
        "Papers": "log",

        // Rust
        "Rust":   "src",
        ".cargo": "config",

