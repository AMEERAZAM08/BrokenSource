{
    // Configure files and folders visibility
    "files.exclude": {
        // Annoying __pycache__, cleaned with pyclean
        "**/__pycache__": true,

        // Don't hide .git, it might be useful ?
        "**/.git": false,

        // Syncthing
        ".stignore": true,
    },

    // Pylance and star imports..
    "python.analysis.diagnosticSeverityOverrides": {
        "reportUndefinedVariable": "none"
    },

    // Python isort
    "editor.codeActionsOnSave": {
        "source.organizeImports": "explicit"
    },

    "isort.args": [
        "-sl"
    ],

    // Icons

    "material-icon-theme.files.associations": {
        "brakeit": "python"
    },

    "material-icon-theme.folders.associations": {
        // Broken Stuff
        "Broken": "src",
        "Papers": "log",

        // Rust
        "Rust":   "src",
        ".cargo": "config",

        // Other
        "Externals": "resource",
        "Scenes":    "core",
        "Sombrero":  "environment",
        "User":      "home",
        "Premium":   "admin",
        "Default":   "examples",
        "Community": "shared",
        "Workspace": "container",
        "Prompts":   "log",
        ".venvs":    "python",

        // Shaders
        "Fragment": "shader",
        "Vertex":   "shader",

        // Projects
        "Ardmin":       "tools",
        "AudioSight":   "tools",
        "DepthFlow":    "tools",
        "Harper":       "tools",
        "HypeWord":     "tools",
        "Oscillospoor": "tools",
        "PhasorFlow":   "tools",
        "PocketSolar":  "tools",
        "QuadSnap":     "tools",
        "ShaderFlow":   "tools",
        "Sortia":       "tools",
        "Archium":      "tools",
        "Clipyst":      "tools",
        "Upscalin":     "tools",

        // Sub-packages of Broken
        "BrokenDotmap":    "core",
        "BrokenFFmpeg":    "core",
        "BrokenEnum":      "core",
        "BrokenExternals": "core",
        "BrokenUpscaler":  "core",
        "Optional":        "include",
        "Pyaket":          "tools",

        // Personal
        "Tremeschin": "home",
    },

    // Better comments colors
    "better-comments.tags": [
        {"tag": "error",      "color": "#FF2D00"},
        {"tag": "fixme",      "color": "#3498DB"},
        {"tag": "warn",       "color": "#FCC203"},
        {"tag": "todo",       "color": "#FF8C00"},
        {"tag": "note",       "color": "#584576"},
        {"tag": "//",         "color": "#98C379"},
        {"tag": "idea",       "color": "#B10DC9"},
        {"tag": "hack",       "color": "#FF2D00"},
        {"tag": "info",       "color": "#3498DB"},
        {"tag": "debug",      "color": "#FCC203"},
        {"tag": "workaround", "color": "#3498DB"}
    ],

    // Better minimap
    "editor.minimap.renderCharacters": false,
    "editor.minimap.maxColumn": 100,
