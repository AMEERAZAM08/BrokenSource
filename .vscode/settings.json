{
    // Configure files and folders visibility
    "files.exclude": {

        // Synced with other projects or shown on monorepo
        // "*/**/.gitattributes": true,
        // "*/**/.gitignore":     true,
        "*/**/.github":        true,

        // Always hidden
        "**/.stignore":   true,
        "**/__pycache__": true,
    },

    // Icons

    "material-icon-theme.files.associations": {
        "brakeit": "python"
    },

    "material-icon-theme.folders.associations": {
        // Broken Stuff
        "Broken": "src",
        "Papers": "log",

        // Rust
        "Rust":   "src",
        ".cargo": "config",

        // Other
        "Externals":  "core",
        "Scenes":     "core",
        "User":       "home",
        "Premium":    "admin",
        "Default":    "examples",
        "Community":  "shared",
        "Workspace":  "container",
        "Prompts":    "log",
        ".venvs":     "python",
        "Staging":    "temp",
        "Midis":      "audio",
        "Midi":       "audio",
        "SoundFonts": "audio",
        "Brakeit":    "download",
        "Profile":    "admin",
        "Fork":       "less",
        "Vectron":    "core",

        // Shaders
        "Fragment": "shader",
        "Vertex":   "shader",

        // Projects
        "Ardmin":       "tools",
        "AudioSight":   "tools",
        "DepthFlow":    "tools",
        "Harper":       "tools",
        "HypeWord":     "tools",
        "Oscillospoor": "tools",
        "PhasorFlow":   "tools",
        "PocketSolar":  "tools",
        "QuadSnap":     "tools",
        "ShaderFlow":   "tools",
        "Sortia":       "tools",
        "Archium":      "tools",
        "Clipyst":      "tools",
        "Upscalin":     "tools",
        "Pianola":      "tools",
        "SpectroNote":  "tools",
        "FastCutter":   "tools",

        // Meta
        "FluentMidi":   "include",

        // Sub-packages of Broken
        "Dotmap":    "core",
        "Enum":      "core",
        "FFmpeg":    "core",
        "Loaders":   "core",
        "Upscaler":  "core",
        "Optional":  "include",
        "Pyaket":    "tools",

        // Personal
        "Tremeschin": "home",
    },

    // Better comments colors
    "better-comments.tags": [
        {"tag": "error",        "color": "#FF2D00"},
        {"tag": "fixme",        "color": "#3498DB"},
        {"tag": "warn",         "color": "#FCC203"},
        {"tag": "todo",         "color": "#FF8C00"},
        {"tag": "note",         "color": "#584576"},
        {"tag": "//",           "color": "#98C379"},
        {"tag": "idea",         "color": "#B10DC9"},
        {"tag": "hack",         "color": "#FF2D00"},
        {"tag": "info",         "color": "#3498DB"},
        {"tag": "debug",        "color": "#FCC203"},
        {"tag": "workaround",   "color": "#3498DB"},
        {"tag": "optimization", "color": "#3498DB"}
    ],

    // Fixme: Remove when only a single Python venv is used
    "python.analysis.diagnosticSeverityOverrides": {
        "reportMissingImports": "none"
    },

    // Auto remove unused imports
    // "[python]": {
    //     "editor.codeActionsOnSave": {
    //       "source.organizeImports": "explicit",
    //       "source.unusedImports": "explicit",
    //     }
    // },

    // Ignore some stuff on Pylance
    "python.analysis.exclude": [
        "Meta/**",
        "___**",
        "Private**",
        "**/Staging/**",
        "**/Others**",
    ],

    // Better minimap
    "editor.minimap.renderCharacters": false,
    "editor.minimap.maxColumn": 100,
}