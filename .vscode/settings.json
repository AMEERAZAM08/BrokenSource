        // Meta
        "FluentMidi":   "include",

        // Sub-packages of Broken
        "Dotmap":    "core",
        "Enum":      "core",
        "FFmpeg":    "core",
        "Loaders":   "core",
        "Upscaler":  "core",
        "Optional":  "include",
        "Pyaket":    "tools",

        // Personal
        "Tremeschin": "home",
    },

    // Better comments colors
    "better-comments.tags": [
        {"tag": "error",      "color": "#FF2D00"},
        {"tag": "fixme",      "color": "#3498DB"},
        {"tag": "warn",       "color": "#FCC203"},
        {"tag": "todo",       "color": "#FF8C00"},
        {"tag": "note",       "color": "#584576"},
        {"tag": "//",         "color": "#98C379"},
        {"tag": "idea",       "color": "#B10DC9"},
        {"tag": "hack",       "color": "#FF2D00"},
        {"tag": "info",       "color": "#3498DB"},
        {"tag": "debug",      "color": "#FCC203"},
        {"tag": "workaround", "color": "#3498DB"}
    ],

    // Fixme: Remove when only a single Python venv is used
    "python.analysis.diagnosticSeverityOverrides": {
        "reportMissingImports": "none"
    },

    // Ignore "Meta" directory on PyLance
    "python.analysis.exclude": [
        "Meta/Fork/**",
        "___**",
        "Private**",
        "**/Staging/**",
        "**/Others**",
    ],

    // Better minimap
    "editor.minimap.renderCharacters": false,
    "editor.minimap.maxColumn": 100,
