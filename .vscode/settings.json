        "Community":  "shared",
        "Workspace":  "container",
        "Prompts":    "log",
        ".venvs":     "python",
        "Staging":    "temp",
        "Midis":      "audio",
        "Midi":       "audio",
        "SoundFonts": "audio",
        "Brakeit":    "download",
        "Profile":    "admin",
        "Fork":       "less",

        // Shaders
        "Fragment": "shader",
        "Vertex":   "shader",

        // Projects
        "Ardmin":       "tools",
